#include <stdio.h>

// Function to check if character is a valid arithmetic operator
int isOperator(char ch) {
    return (ch == '+' || ch == '-' || ch == '*' || ch == '/');
}

int main() {
    char input;

    printf("Enter a single character: ");
    scanf("%c", &input);

    if (isOperator(input)) {
        printf("Valid Operator: %c\n", input);
    } else {
        printf("Not a valid arithmetic operator.\n");
    }

    return 0;
}
