#include <stdio.h>
#include <string.h>

int main() {
    char line[200];

    printf("Enter a line of code:\n");
    fgets(line, sizeof(line), stdin);  // Read one line of input

    // Check for single-line comment
    if (line[0] == '/' && line[1] == '/') {
        printf("This is a single-line comment.\n");
    }
    // Check for multi-line comment
    else if (line[0] == '/' && line[1] == '*') {
        int len = strlen(line);
        if (len >= 4 && line[len - 2] == '*' && line[len - 3] != '/') {
            printf("This is a multi-line comment (closed).\n");
        } else if (strstr(line, "*/") != NULL) {
            printf("This is a multi-line comment (closed).\n");
        } else {
            printf("This is the start of a multi-line comment (not closed).\n");
        }
    }
    // Not a comment
    else {
        printf("This is NOT a comment.\n");
    }

    return 0;
}
